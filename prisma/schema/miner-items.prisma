model MinerItems {
    id        Int             @id @default(autoincrement())
    name      String          @default("")
    code      String
    level     Int             @default(1)
    type      MinerItemType   @default(COIN)
    nextLevel Boolean         @default(true)
    speed     Float
    cost      Float
    rarity    MinerItemRarity @default(common)
    image     String
    comment   String
    minerShop MinerShop?

    @@unique([code, level, type])
}

enum MinerItemType {
    COIN
    USDT
    NFT
}

enum MinerItemRarity {
    common
    uncommon
    rare
    epic
    legendary
}
