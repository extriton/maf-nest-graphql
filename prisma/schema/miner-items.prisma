model MinerItems {
    id          Int             @id @default(autoincrement())
    code        String
    name        String          @unique
    type        MinerItemType   @default(COIN)
    level       Int             @default(1)
    nextLevel   Boolean         @default(true)
    speed       Float
    cost        Float
    rarity      MinerItemRarity @default(common)
    image       String
    description String

    @@unique([code, level, type])
}

enum MinerItemType {
    COIN
    USDT
    NFT
}

enum MinerItemRarity {
    common
    uncommon
    rare
    epic
    legendary
}
